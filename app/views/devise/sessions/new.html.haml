.container
  .form-signin
    = form_for(resource, as: resource_name, :url => session_path(resource_name), :html => {:method => :post}) do |f|
      %h2.form-signin-heading Please sign in
      .sr-only
        =f.label :email, "for" =>"inputEmail"
      .inputEmail.form-control
        =f.text_field :email, placeholder: "Email address", :autofoucus =>true, :required =>true
      .sr-only
        =f.label :password, "for" => "inputPassword"
      .inputPassword.form-control
        =f.text_field :password, placeholder: "Password", :autofoucus => true, :required =>true
      .checkbox
        %label
          =f.check_box "remember_me"
          Remember me
      .btn.btn-lg.btn-primary.btn-block
        =f.submit "Sign in"
    .text-center
      %p
        Not a member?
        %a{href: "/users/sign_up"} Sign up now

